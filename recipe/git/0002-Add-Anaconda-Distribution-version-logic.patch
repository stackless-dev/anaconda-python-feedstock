diff --git a/Python/getversion.c b/Python/getversion.c
index cab7b23b18..65ca388d90 100644
--- a/Python/getversion.c
+++ b/Python/getversion.c
@@ -5,6 +5,41 @@
 
 #include "patchlevel.h"
 
+const char *
+Anaconda_GetVersion(void)
+{
+	#ifdef MS_WIN32
+	#define STDLIB_DIR  "\\Lib\\"
+	#else
+	#define STDLIB_DIR  "/lib/python2.7/"
+	#endif
+	static char res[128];
+	FILE *f;
+	char path[256];
+	int c, i;
+
+	PyOS_snprintf(path, sizeof(path), "%s" STDLIB_DIR "version.txt",
+				Py_GetPrefix());
+
+	f = fopen(path, "rb");
+	if (f == NULL) {
+		strcpy(res, "Anaconda, Inc.");
+	} else {
+		i = 0;
+		while (i + 1 < sizeof(res)) {
+			c = fgetc(f);
+			if (c == EOF || c == '\n' || c == '\r')
+				break;
+			res[i++] = c;
+		}
+		fclose(f);
+		res[i] = '\0';
+	}
+	return res;
+	#undef STDLIB_DIR
+}
+
+
 #ifdef STACKLESS
 	/* avoiding to recompile everything for Stackless all the time */
 #include "stackless_version.h"
@@ -13,8 +48,8 @@ const char *
 Py_GetVersion(void)
